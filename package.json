  "license": "Apache-2.0",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "@matrix-widget-toolkit/api": "^3.1.0",
    "@matrix-widget-toolkit/mui": "^1.1.2",
    "@matrix-widget-toolkit/react": "^1.0.4",
